<div class="president">
    <div class="chart">
        <label>Presidents' Ages at First Took Office</label>
        <div id="age-at-office-chart"></div>
    </div>
    <div class="panel">
        <div class="chart">
            <label>Number of Presidents in Parties</label>
            <div id="party-count-chart"></div>
        </div>
        <div class="year-slider">
            <div class="label label-info">Drag the slider to see the changes</div>
            <input id="slider" type="range" style="width:100%" min="1733" value="1962" max="1962" />
            <div><label id="president-count"></label> president(s) born before: <span id="start-year">1962</span></div>
        </div>
    </div>
    <div class="panel">
        <label>Presidents' Ages</label>
        <div id="age-chart"></div>
    </div>
</div>